{
  "seed": 1337,
  "data_path": "data/tiny_corpus.txt",
  "out_dir": "out/tiny_bpe_gpt",
  "tokenizer": "bpe",
  "bpe_vocab_size": 8000,
  "bpe_min_frequency": 2,
  "max_steps": 20000,
  "eval_interval": 200,
  "log_interval": 50,
  "batch_size": 64,
  "block_size": 256,
  "n_layer": 6,
  "n_head": 8,
  "n_embd": 256,
  "dropout": 0.1,
  "learning_rate": 0.0003,
  "lr_schedule": "cosine",
  "lr_warmup_steps": 200,
  "lr_min": 3e-05,
  "weight_decay": 0.1,
  "grad_clip": 1.0,
  "amp": true,
  "top_p": 0.95,
  "repetition_penalty": 1.1
}

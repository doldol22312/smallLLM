{
  "seed": 1337,
  "data_path": "data/tiny_corpus.txt",
  "out_dir": "out/tiny_char_gpt",
  "tokenizer": "char",
  "max_steps": 2000,
  "eval_interval": 200,
  "log_interval": 50,
  "batch_size": 64,
  "block_size": 128,
  "n_layer": 4,
  "n_head": 4,
  "n_embd": 128,
  "dropout": 0.1,
  "learning_rate": 0.0003,
  "lr_schedule": "cosine",
  "lr_warmup_steps": 200,
  "lr_min": 3e-05,
  "weight_decay": 0.1,
  "grad_clip": 1.0,
  "amp": true,
  "top_p": 1.0,
  "repetition_penalty": 1.0
}
